#!/bin/bash

set -e

# Bring up the containers
docker-compose up -d

# Create database
docker-compose run weby rake db:create

# Load Schema
docker-compose run web rake:schema:load

# Run migrations
docker-compose run weby bin/rails db:migrate RAILS_ENV=development

# Add seed data
docker-compose run weby bin/rails db:seed RAILS_ENV=development
